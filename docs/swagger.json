{
    "swagger": "2.0",
    "info": {
        "title": "Swagger Example API",
        "contact": {},
        "version": "1.0"
    },
    "paths": {
        "/api/checkout": {
            "post": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "api"
                ],
                "summary": "Checkout products",
                "parameters": [
                    {
                        "description": "request body",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/dto.CheckoutRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful response message",
                        "schema": {
                            "$ref": "#/definitions/dto.CheckoutResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "dto.CheckoutItemData": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "quantity": {
                    "type": "integer"
                }
            }
        },
        "dto.CheckoutRequest": {
            "type": "object",
            "properties": {
                "items": {
                    "description": "CustomerID int      `json:\"customer_id\"`",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/dto.CheckoutItemData"
                    }
                }
            }
        },
        "dto.CheckoutResponse": {
            "type": "object",
            "properties": {
                "items": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/entity.CheckoutItem"
                    }
                },
                "message": {
                    "type": "string"
                },
                "total_price": {
                    "type": "string"
                }
            }
        },
        "entity.CheckoutItem": {
            "type": "object",
            "properties": {
                "product_id": {
                    "type": "integer"
                },
                "product_name": {
                    "type": "string"
                },
                "quantity": {
                    "type": "integer"
                },
                "total_price": {
                    "description": "Price after applying promotion",
                    "type": "number"
                }
            }
        }
    }
